<div class="d-flex align-items-center justify-content-between mb-3">
  <h3>Itens em estoque</h3>
  <% if (session && session.user && session.user.perfil === 'ADMIN') { %>
    <a href="/cadastros/itens/novo" class="btn btn-success">Novo item</a>
  <% } %>
  
</div>

<div class="table-responsive">
  <table class="table table-striped align-middle">
    <thead>
      <tr>
        <th>Código</th>
        <th>Item</th>
        <th>Categoria</th>
        <th>Unidade</th>
        <th class="text-end">Estoque atual</th>
        <th class="text-end" style="width:280px">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% itens.forEach(i => { %>
        <tr>
          <td><%= i.codigo %></td>
          <td><%= i.nome %></td>
          <td><%= i.categoria %></td>
          <td><%= i.unidade %></td>
          <td class="text-end"><%= i.estoque_atual %></td>
          <td class="text-end">
            <form class="d-inline" method="post" action="/estoque/entrada">
              <input type="hidden" name="item_id" value="<%= i.id %>" />
              <input type="number" class="form-control d-inline w-auto" name="quantidade" min="1" step="1" required />
              <button class="btn btn-sm btn-outline-success ms-1">Entrada</button>
            </form>
            <form class="d-inline ms-2" method="post" action="/estoque/saida">
              <input type="hidden" name="item_id" value="<%= i.id %>" />
              <input type="number" class="form-control d-inline w-auto" name="quantidade" min="1" step="1" required />
              <button class="btn btn-sm btn-outline-danger ms-1">Saída</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>


